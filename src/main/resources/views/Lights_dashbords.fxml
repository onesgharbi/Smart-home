<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="980.0" style="-fx-background-color: #f5f5dc;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LightsController">

    <!-- Header Section -->
    <AnchorPane prefHeight="55.0" prefWidth="980.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-width: 0 0 1 0;">
        <Label layoutX="20.0" layoutY="15.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Lights Dashboard" />
        <Label layoutX="140.0" layoutY="19.0" prefHeight="17.0" prefWidth="218.0" style="-fx-font-size: 12px; -fx-text-fill: #8a6750;" text="       Control and Manage Your Lights" />
        <Button layoutX="850.0" layoutY="13.0" style="-fx-font-size: 14px; -fx-background-color: #800000; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Add Light" />
    </AnchorPane>

    <!-- Sidebar Section -->
    <VBox layoutX="0.0" layoutY="55.0" prefHeight="645.0" prefWidth="225.0" style="-fx-background-color: #e8e1cf; -fx-padding: 20px; -fx-spacing: 15px;">
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="All Lights" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Living Room" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Bedroom" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Kitchen" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Outdoor" />
        <Region prefHeight="30" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Settings" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="230.0" layoutY="70.0" prefHeight="620.0" prefWidth="730.0">

        <!-- Row 1: Quick Actions -->
        <HBox layoutX="0.0" layoutY="0.0" spacing="20.0">
            <AnchorPane prefHeight="130.0" prefWidth="240.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Quick Actions" />
                <Button layoutX="15.0" layoutY="50.0" style="-fx-background-color: #800000; -fx-text-fill: white;" text="Turn All On" />
                <Button layoutX="120.0" layoutY="50.0" style="-fx-background-color: #5c2c2c; -fx-text-fill: white;" text="Turn All Off" />
            </AnchorPane>
            <AnchorPane prefHeight="130.0" prefWidth="240.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Brightness Control" />
                <Slider layoutX="15.0" layoutY="50.0" prefWidth="200.0" />
            </AnchorPane>
        </HBox>

        <!-- Row 2: Individual Lights -->
        <VBox layoutX="0.0" layoutY="160.0" spacing="15.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Individual Lights" />

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff;">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@light_icon.png" />
                </ImageView>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Living Room Light" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #8a6750;" text="Status: On" />
                </VBox>
                <ToggleButton layoutX="350.0" style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
            </HBox>

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff;">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@light_icon.png" />
                </ImageView>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Bedroom Light" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #8a6750;" text="Status: Off" />
                </VBox>
                <ToggleButton layoutX="350.0" style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
            </HBox>
        </VBox>

        <!-- Row 3: Group Controls -->
        <VBox layoutX="0.0" layoutY="400.0" spacing="15.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Group Controls" />

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff;">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Living Room" />
                <Button style="-fx-background-color: #800000; -fx-text-fill: white;" text="Turn On" />
                <Button style="-fx-background-color: #5c2c2c; -fx-text-fill: white;" text="Turn Off" />
                <Slider prefWidth="200.0" />
            </HBox>

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff;">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Outdoor" />
                <Button style="-fx-background-color: #800000; -fx-text-fill: white;" text="Turn On" />
                <Button style="-fx-background-color: #5c2c2c; -fx-text-fill: white;" text="Turn Off" />
                <Slider prefWidth="200.0" />
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
