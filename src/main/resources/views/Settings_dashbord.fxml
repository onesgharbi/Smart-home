<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane prefWidth="980.0" prefHeight="700.0" style="-fx-background-color: #f5f5dc;">
    <!-- Header Section -->
    <AnchorPane prefHeight="60.0" prefWidth="980.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-width: 0 0 1 0;">
        <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Settings Dashboard" />
        <Label layoutX="160.0" layoutY="24.0" style="-fx-font-size: 12px; -fx-text-fill: #8a6750;" text="Manage Device and User Preferences" />
        <Button layoutX="850.0" layoutY="15.0" style="-fx-background-color: #800000; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Save Changes"/>
    </AnchorPane>

    <!-- Sidebar Section -->
    <VBox layoutX="0.0" layoutY="60.0" prefHeight="640.0" prefWidth="220.0" style="-fx-background-color: #e8e1cf; -fx-padding: 20px; -fx-spacing: 20px;">
        <Button text="General Settings" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" />
        <Button text="Notifications" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" />
        <Button text="Privacy" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" />
        <Button text="Account Settings" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" />
        <Region prefHeight="30" />
        <Button text="Logout" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="220.0" layoutY="60.0" prefHeight="640.0" prefWidth="760.0">

        <!-- Section 1: General Settings -->
        <AnchorPane layoutY="0.0" prefHeight="150.0" prefWidth="760.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="General Settings" />
            <VBox layoutX="20.0" layoutY="50.0" spacing="15.0">
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Language: " />
                    <ComboBox fx:id="languageComboBox" promptText="Select Language" style="-fx-font-size: 14px; -fx-text-fill: #5c2c2c;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="English" />
                                <String fx:value="Spanish" />
                                <String fx:value="French" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Time Format: " />
                    <ComboBox fx:id="timeFormatComboBox" promptText="Select Time Format" style="-fx-font-size: 14px; -fx-text-fill: #5c2c2c;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="12-hour" />
                                <String fx:value="24-hour" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
            </VBox>
        </AnchorPane>

        <!-- Section 2: Notification Settings -->
        <AnchorPane layoutY="170.0" prefHeight="150.0" prefWidth="760.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Notification Settings" />
            <VBox layoutX="20.0" layoutY="50.0" spacing="15.0">
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Email Notifications: " />
                    <CheckBox fx:id="emailNotificationsCheckBox" text="Enable Email Notifications" />
                </HBox>
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Push Notifications: " />
                    <CheckBox fx:id="pushNotificationsCheckBox" text="Enable Push Notifications" />
                </HBox>
            </VBox>
        </AnchorPane>

        <!-- Section 3: Privacy Settings -->
        <AnchorPane layoutY="340.0" prefHeight="150.0" prefWidth="760.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Privacy Settings" />
            <VBox layoutX="20.0" layoutY="50.0" spacing="15.0">
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Location Access: " />
                    <ToggleButton fx:id="locationAccessToggle" text="Enable Location Access" />
                </HBox>
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Data Sharing: " />
                    <ToggleButton fx:id="dataSharingToggle" text="Enable Data Sharing" />
                </HBox>
            </VBox>
        </AnchorPane>

        <!-- Section 4: Account Settings -->
        <AnchorPane layoutY="510.0" prefHeight="150.0" prefWidth="760.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Account Settings" />
            <VBox layoutX="20.0" layoutY="50.0" spacing="15.0">
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Change Password: " />
                    <Button style="-fx-background-color: #800000; -fx-text-fill: white; -fx-border-radius: 5px;" text="Change" />
                </HBox>
                <HBox spacing="15.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #5c2c2c;" text="Delete Account: " />
                    <Button style="-fx-background-color: #800000; -fx-text-fill: white; -fx-border-radius: 5px;" text="Delete" />
                </HBox>
            </VBox>
        </AnchorPane>

    </AnchorPane>
</AnchorPane>
