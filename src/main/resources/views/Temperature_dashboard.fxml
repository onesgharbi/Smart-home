<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="980.0" style="-fx-background-color: #f5f5dc;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.TemperatureController">

    <!-- Header Section -->
    <AnchorPane prefHeight="55.0" prefWidth="980.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-width: 0 0 1 0;">
        <Label layoutX="20.0" layoutY="15.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Temperature Dashboard" />
        <Label layoutX="218.0" layoutY="19.0" style="-fx-font-size: 12px; -fx-text-fill: #8a6750;" text="Monitor and Control Temperature Devices" />
        <Button layoutX="850.0" layoutY="13.0" style="-fx-font-size: 14px; -fx-background-color: #800000; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Add Device" />
    </AnchorPane>

    <!-- Sidebar Section -->
    <VBox layoutX="0.0" layoutY="55.0" prefHeight="645.0" prefWidth="225.0" style="-fx-background-color: #e8e1cf; -fx-padding: 20px; -fx-spacing: 15px;">
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="All Devices" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Thermostats" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Heaters" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Coolers" />
        <Region prefHeight="30" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Settings" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="230.0" layoutY="70.0" prefHeight="620.0" prefWidth="730.0">

        <!-- Section 1: Current Temperature -->
        <AnchorPane prefHeight="130.0" prefWidth="730.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Current Temperature" />
            <Label layoutX="24.0" layoutY="36.0" style="-fx-font-size: 50px; -fx-text-fill: #800000;" text="22°C" />
            <Label layoutX="20.0" layoutY="100.0" style="-fx-font-size: 14px; -fx-text-fill: #8a6750;" text="Room: Living Room" />
        </AnchorPane>

        <!-- Section 2: Temperature Control -->
        <AnchorPane layoutX="0.0" layoutY="150.0" prefHeight="200.0" prefWidth="730.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Control Temperature" />
            <HBox layoutX="20.0" layoutY="50.0" spacing="20.0">
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Thermostat" />
                    <ToggleButton style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
                </VBox>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Heater" />
                    <ToggleButton style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
                </VBox>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Cooler" />
                    <ToggleButton style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
                </VBox>
            </HBox>
        </AnchorPane>

        <!-- Section 3: Temperature History -->
        <AnchorPane layoutX="0.0" layoutY="370.0" prefHeight="200.0" prefWidth="730.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Temperature History (Last 7 Days)" />
            <LineChart fx:id="lineChart" layoutX="20.0" layoutY="50.0" prefHeight="130.0" prefWidth="690.0" style="-fx-background-color: #ffffff;">
                <xAxis>
                    <CategoryAxis label="Days" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Temperature (°C)" />
                </yAxis>
                <Series name="Room Temperature">
                    <Data xValue="Day 1" yValue="20" />
                    <Data xValue="Day 2" yValue="22" />
                    <Data xValue="Day 3" yValue="21" />
                    <Data xValue="Day 4" yValue="23" />
                    <Data xValue="Day 5" yValue="24" />
                    <Data xValue="Day 6" yValue="22" />
                    <Data xValue="Day 7" yValue="23" />
                </Series>
            </LineChart>
        </AnchorPane>

    </AnchorPane>
</AnchorPane>
