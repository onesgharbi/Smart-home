<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="980.0" style="-fx-background-color: #f5f5dc;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MotionController">

    <!-- Header Section -->
    <AnchorPane prefHeight="55.0" prefWidth="980.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-width: 0 0 1 0;">
        <Label layoutX="20.0" layoutY="15.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Motion Dashboard" />
        <Label layoutX="140.0" layoutY="19.0" style="-fx-font-size: 12px; -fx-text-fill: #8a6750;" text="          Monitor and Manage Motion Sensors" />
        <Button layoutX="850.0" layoutY="13.0" style="-fx-font-size: 14px; -fx-background-color: #800000; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Add Sensor" />
    </AnchorPane>

    <!-- Sidebar Section -->
    <VBox layoutX="0.0" layoutY="55.0" prefHeight="645.0" prefWidth="225.0" style="-fx-background-color: #e8e1cf; -fx-padding: 20px; -fx-spacing: 15px;">
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="All Sensors" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Living Room" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Bedroom" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Outdoor" />
        <Region prefHeight="30" />
        <Button prefWidth="180" style="-fx-background-color: #ffffff; -fx-font-size: 16px; -fx-border-color: #d9cdbf; -fx-border-radius: 10px; -fx-text-fill: #5c2c2c;" text="Settings" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="230.0" layoutY="70.0" prefHeight="620.0" prefWidth="730.0">

        <!-- Section 1: Motion Summary -->
        <HBox layoutX="0.0" layoutY="0.0" spacing="20.0">
            <AnchorPane prefHeight="130.0" prefWidth="240.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Total Sensors" />
                <Label layoutX="15.0" layoutY="50.0" style="-fx-font-size: 40px; -fx-text-fill: #800000;" text="3" />
            </AnchorPane>
            <AnchorPane prefHeight="130.0" prefWidth="240.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Active Sensors" />
                <Label layoutX="15.0" layoutY="50.0" style="-fx-font-size: 40px; -fx-text-fill: #800000;" text="2" />
            </AnchorPane>
        </HBox>

        <!-- Section 2: Motion Activity Chart -->
        <AnchorPane layoutX="0.0" layoutY="150.0" prefHeight="250.0" prefWidth="730.0" style="-fx-background-color: #ffffff; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
            <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Motion Activity" />
            <BarChart fx:id="activityChart" layoutX="15.0" layoutY="40.0" prefHeight="200.0" prefWidth="700.0" title="Activity Over Time">
                <xAxis>
                    <CategoryAxis label="Time (Hours)" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Motion Events" side="LEFT" />
                </yAxis>
            </BarChart>
        </AnchorPane>

        <!-- Section 3: Individual Sensor Status -->
        <VBox layoutX="0.0" layoutY="420.0" spacing="15.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Individual Sensors" />

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff;">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@motion_icon.png" />
                </ImageView>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Living Room Sensor" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #8a6750;" text="Status: Active" />
                </VBox>
                <ToggleButton layoutX="350.0" style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
            </HBox>

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #d9cdbf; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #ffffff;">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@motion_icon.png" />
                </ImageView>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c2c2c;" text="Outdoor Sensor" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #8a6750;" text="Status: Inactive" />
                </VBox>
                <ToggleButton layoutX="350.0" style="-fx-background-color: #800000; -fx-text-fill: white;" text="Toggle" />
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
