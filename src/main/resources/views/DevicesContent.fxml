    <!-- Sidebar Section -->
    <VBox layoutX="0.0" layoutY="55.0" prefHeight="645.0" prefWidth="225.0" style="-fx-background-color: #f0e5e0; -fx-padding: 20px; -fx-spacing: 15px;">
