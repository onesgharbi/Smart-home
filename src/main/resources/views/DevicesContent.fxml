             <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Quick Actions" />
             <Button layoutX="15.0" layoutY="40.0" style="-fx-background-color: #c8a582; -fx-text-fill: white;" text="Turn Off All" />
         </AnchorPane>
         <AnchorPane layoutX="23.0" layoutY="55.0" prefHeight="130.0" prefWidth="240.0" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
             <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Total Devices" />
             <Label layoutX="15.0" layoutY="50.0" style="-fx-font-size: 36px; -fx-text-fill: #555;" text="15" />
         </AnchorPane>

    </AnchorPane>
</AnchorPane>
