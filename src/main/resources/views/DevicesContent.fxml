        <Button prefWidth="180" style="-fx-background-color: #fff; -fx-font-size: 16px; -fx-border-color: #ddd; -fx-border-radius: 10px;" text="Offline Devices" />
        <Button prefWidth="180" style="-fx-background-color: #fff; -fx-font-size: 16px; -fx-border-color: #ddd; -fx-border-radius: 10px;" text="Device Groups" />
        <Button prefWidth="180" style="-fx-background-color: #fff; -fx-font-size: 16px; -fx-border-color: #ddd; -fx-border-radius: 10px;" text="Troubleshooting" />
        <Region prefHeight="30" />
        <Button prefWidth="180" style="-fx-background-color: #fff; -fx-font-size: 16px; -fx-border-color: #ddd; -fx-border-radius: 10px;" text="Settings" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="225.0" layoutY="68.0" prefHeight="620.0" prefWidth="730.0">

        <!-- Row 1: Device Summary -->
        <HBox layoutX="0.0" layoutY="0.0" spacing="20.0" />

        <!-- Row 2: Device List -->
