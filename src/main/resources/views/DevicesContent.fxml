            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #f9f9f9;">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@device_icon.png" />
                </ImageView>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Smart Light" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #777;" text="Living Room - Online" />
                </VBox>
                <Button layoutX="350.0" style="-fx-background-color: #c8a582; -fx-text-fill: white;" text="Details" />
            </HBox>

            <HBox spacing="15.0" style="-fx-padding: 10px; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: #f9f9f9;">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@device_icon.png" />
                </ImageView>
                <VBox>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Smart Thermostat" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #777;" text="Bedroom - Offline" />
                </VBox>
                <Button layoutX="350.0" style="-fx-background-color: #c8a582; -fx-text-fill: white;" text="Details" />
            </HBox>
        </VBox>

        <!-- Row 3: Device Actions -->
        <HBox layoutX="0.0" layoutY="430.0" spacing="20.0" />
         <AnchorPane layoutX="23.0" layoutY="224.0" prefHeight="130.0" prefWidth="240.0" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
             <Label layoutX="15.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Active Devices" />
             <Label layoutX="15.0" layoutY="50.0" style="-fx-font-size: 36px; -fx-text-fill: #555;" text="12" />
